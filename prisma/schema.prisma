// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int       @id @default(autoincrement())
  name                    String?
  username                String?   @unique
  mobileNumber            String?
  email                   String?   @unique
  emailVerified           DateTime?
  image                   String?
  password                String?
  accounts                Account[]
  sessions                Session[]

  // নতুন ফিল্ড: ইমেইল ভেরিফিকেশনের জন্য কোড
  verificationCode        String?
  verificationCodeExpiry  DateTime?

  // নতুন ফিল্ড: পাসওয়ার্ড রিসেটের জন্য কোড
  passwordResetCode         String?
  passwordResetCodeExpiry   DateTime?
}



model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// TeachingMode enum আগের মতোই থাকবে
enum TeachingMode {
  LIVE
  PRE_RECORDED
  HYBRID
}

// নতুন: শিক্ষকের স্ট্যাটাসের জন্য enum
enum TeacherStatus {
  PENDING
  APPROVED
  REJECTED
}

model Teacher {
  id                  String   @id @default(cuid())
  fullName            String
  email               String   @unique
  mobileNumber        String?
  profilePhoto        String?
  dateOfBirth         DateTime?

  username            String   @unique
  password            String

  shortBio            String
  detailedBio         String?
  skills              Skill[]
  certifications      String[]
  socialLinks         String[]

  subjects            String[]
  preferredLanguage   String
  teachingMode        TeachingMode
  availability        String?

  bankName            String?
  accountNumber       String?
  paypalOrStripeId    String?
  taxId               String?

  termsAccepted       Boolean
  identityVerification String?
  backgroundCheck     String?

  // নতুন স্ট্যাটাস ফিল্ড যোগ করা হয়েছে
  status              TeacherStatus @default(PENDING)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
